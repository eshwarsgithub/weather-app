{
    "workflowApiVersion": "1.1",
    "key": "weather-check-activity-key",
    "name": "Weather Check",
    "description": "Checks the current weather for a contact and branches the journey.",
    "type": "RESTDECISION",
    "lang": {
      "en-US": {
        "name": "Weather Check",
        "description": "Checks the weather and branches journey."
      }
    },
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "contactKey": "{{Contact.Key}}",
            "city": "{{Contact.Attribute.Demographics.City}}",
            "state": "{{Contact.Attribute.Demographics.State}}",
            "postalCode": "{{Contact.Attribute.Demographics.PostalCode}}",
            "country": "{{Contact.Attribute.Demographics.Country}}"
          }
        ],
        "outArguments": [],
        "url": "https://weather-app-kappa-three-25.vercel.app/execute",
        "verb": "POST",
        "useJwt": true,
        "timeout": 10000
      }
    },
    "configurationArguments": {
      "save": { "url": "https://weather-app-kappa-three-25.vercel.app/save" },
      "publish": { "url": "https://weather-app-kappa-three-25.vercel.app/publish" },
      "validate": { "url": "https://weather-app-kappa-three-25.vercel.app/validate" },
      "stop": { "url": "https://weather-app-kappa-three-25.vercel.app/stop" }
    },
    "edit": {
      "url": "https://weather-app-kappa-three-25.vercel.app/edit.html"
    },
    "outcomes": [
      {
        "key": "adverse_weather",
        "name": "Adverse Weather",
        "arguments": {
          "branchResult": "Adverse Weather"
        }
      },
      {
        "key": "good_weather",
        "name": "Good Weather",
        "arguments": {
          "branchResult": "Good Weather"
        }
      }
    ],
    "metaData": {
      "icon": "images/icon.png",
      "category": "Decision"
    },
    "isConfigured": true
  }
  
  